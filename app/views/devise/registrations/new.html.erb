<div class="contents row">
  <div class="container">
    <h2>新規登録</h2>
    <div class="form-content">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :"ニックネーム" %>
        <%= f.text_field :nickname, autofocus: true, maxlength: "8", class: "form-input" %>
      </div>

      <div class="field">
        <%= f.label :"Eメール" %><br />
        <%= f.email_field :email, autocomplete: "email", class: "form-input" %>
      </div>

      <div class="field">
        <%= f.label :"パスワード" %>
        <% if @minimum_password_length %>
        <em> (英数字6文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-input" %>
      </div>

      <div class="field">
        <%= f.label :"パスワード(確認)" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-input" %>
      </div>

      <div class="field">
        <%= f.label :"お名前(全角)" %>
        <div class="input-name-wrap">
          <div class="form-first-name">
            <%= f.text_field :first_name_kanji, class:"form-first-input", placeholder:"例) 田中" %>
          </div>
          <div class="form-last-name">
            <%= f.text_field :last_name_kanji, class:"form-last-input", placeholder:"例) 太郎" %>
          </div>
        </div>
      </div>
      <div class="field">
        <%= f.label :"お名前カナ(全角)" %>
        <div class="input-name-wrap">
          <div class="form-first-name">
            <%= f.text_field :first_name_kana, class:"form-first-input", placeholder:"例) タナカ" %>
          </div>
          <div class="form-last-name">
            <%= f.text_field :last_name_kana, class:"form-last-input", placeholder:"例) タロウ" %>
          </div>
        </div>
      </div>
      <div class="actions">
        <%= f.submit "登録" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
    </div>
  </div>
</div>