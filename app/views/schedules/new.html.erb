<div class="contents row">
  <div class="container">
    <h2>新規スケジュール作成</h2>
    <div class="form-content">
      <%=form_with model: [@room, @schedule], local: true do |f| %>
        <div class="field">
          <%= f.label :ルーム名 %>
          <%= f.text_field :name, autofocus: true, class: "form-input" %>
        </div>
        
        <div class="actions">
          <%= f.submit "追加" %>
        </div>
      <% end %>
    </div>
    <div class="cancel-create-room">
      <%= link_to "戻る", room_path(@room.id) %>
    </div>
  </div>
</div>  